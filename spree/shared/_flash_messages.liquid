{% comment %}
  Here we capture flash_messages as a variable so we can evaluate the size.
  Thus giving us the ability to determine if there is content in it.
{% endcomment %}
{% capture flash_present %}{% flash_messages %}{% endcapture %}
{% if flash_present.size > 0 %}
  <div class="flash-messages">
    <div class="alert alert-primary alert-dismissible fade show">
      <h4>{% flash_messages %}</h4>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
{% endif %}
